packadd editexisting
packadd comment
packadd justify

let g:dir_invert_split = 1
let g:dir_change_cwd = 1
let g:codedark_modern=1
let g:codedark_italics=1
color codedark

set title
set nocompatible
set hidden
set noswapfile
set backspace=indent,eol,start
set expandtab
set tabstop=2
set shiftwidth=2
set smarttab
set nrformats-=octal
